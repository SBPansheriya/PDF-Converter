<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_linear"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/rotate_pages_img" />

                <TextView
                    android:id="@+id/txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/metropolis_bold"
                    android:text="Rotate pages"
                    android:textColor="@color/dark_blue"
                    android:textSize="18sp" />
            </LinearLayout>

            <RadioGroup
                android:id="@+id/rotation_angle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">

                <RadioButton
                    android:id="@+id/deg90"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:buttonTint="@color/dark_blue"
                    android:layout_marginBottom="5sp"
                    android:fontFamily="@font/metropolis_semibold"
                    android:text="90°"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/deg180"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:buttonTint="@color/dark_blue"
                    android:layout_marginBottom="5sp"
                    android:fontFamily="@font/metropolis_semibold"
                    android:text="180°"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/deg270"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:buttonTint="@color/dark_blue"
                    android:fontFamily="@font/metropolis_semibold"
                    android:text="270°"
                    android:textSize="18sp" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="end"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/canceldialog"
                        android:layout_width="65dp"
                        android:layout_height="30dp"
                        android:background="@drawable/create_pdf_dialog_border"
                        android:backgroundTint="#E7EAEE"
                        android:fontFamily="@font/metropolis_medium"
                        android:text="@string/cancel"
                        android:textAllCaps="false"
                        android:textColor="#80000000"
                        android:textSize="13sp" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="0dp" />

                    <Button
                        android:id="@+id/okdialog"
                        android:layout_width="45dp"
                        android:layout_height="30dp"
                        android:background="@drawable/create_pdf_dialog_border"
                        android:backgroundTint="#00A9FF"
                        android:fontFamily="@font/metropolis_medium"
                        android:text="Ok"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>